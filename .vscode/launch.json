{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Clean DB",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "preLaunchTask": "removeDatabase",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Init DB",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "preLaunchTask": "initDatabase",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}